#!/bin/bash

ID=$(id -u)

if [ $ID -ne 0 ]
  then
      echo "Error: Please Log with root useR access"
      exit 1
else
      echo "Logging as root user"
fi

yum install mysql -y

if [ $? -ne 0 ]
  then 
      echo "Mysql installation got failed!!"
      exit 1
else
    echo "Mysql installtion succesfull!1"
fi

yum install git -y

if [ $? -ne 0 ]
  then
      echo "Error: The git is not installed" 
      exit 1
else
      echo "Git is installed succesfully!!"
fi