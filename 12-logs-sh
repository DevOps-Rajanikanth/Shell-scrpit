#!/bin/bash

ID=$(id -u)
 echo "script name: $0"

if [ $ID -ne 0 ]
  then
      echo "Error: Please as a  root user "
      exit 1
else
      echo "You are root user"
fi

VALIDATE(){

  if [ $1 -ne 0 ]
    then 
      echo "$2 ....failed!!"
      exit 1
  else
      echo " $2 ....succesfull!"
   fi
}



yum install mysql -y

VALIDATE $? "Installing Mysql"


yum install git -y

VALIDATE $? "Installing Git"
