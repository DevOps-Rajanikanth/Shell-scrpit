#!/bin/bash

R="\e[31m"
G="\e[32m"
Y="\e[33m"
N="\e[0m"

TIMESTAMP=$(date +%F-%M-%H-%S)
LOGFILE="/tmp/$0-TIMESTAMP.log"

echo -e " $Y The script name: $0"
ID=$(id -u)

if [ $ID -ne 0 ]
  then
      echo -e "$R ERROR: root user access denied!! $N "
      exit 1
else
      echo -e "You are $Y Roor $Y user"
fi

VALIDATE(){
  
  if [ $1 -ne 0 ]
    then 
        echo "$2 ....failed!!"
  else
        echo "T$2 .....Success!!"
  fi
}

yum install mysql -y 

VALIDATE $? "Insatalling mysql"

yum install git -y 

VALIDATE $? "Insatlling git"



